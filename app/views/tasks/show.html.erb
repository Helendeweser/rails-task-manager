<h1>
  Task: <%= @task.title %>
</h1>

<p> Details: <%= @task.details %> </p>
<p> Completed?
  <% if @task.completed %>
    <%= 'Yes' %>
  <% else %>
    <%= 'No' %>
  <% end %>
</p>


<%= link_to 'Go back', tasks_path %>

<%= link_to 'Update this task', edit_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
